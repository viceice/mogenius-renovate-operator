{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "packageRules": [
    {
      "matchManagers": ["gomod","dockerfile"],
      "semanticCommitType": "fix"
    },
    {
      "matchPackageNames": ["registry.k8s.io/kubectl"],
      "semanticCommitType": "fix"
    }
  ]
}
